{
  "compilerOptions": {
    "types": ["vitest/globals"],

    "emitDeclarationOnly": true,
    "declaration": true,

    "isolatedModules": true,
    "esModuleInterop": true,

    "skipLibCheck": true,

    "importsNotUsedAsValues": "error",
    "strict": true,

    "jsx": "react",
    "module": "NodeNext",

    "allowJs": true,

    // For testing purposes
    "baseUrl": "src",
    "paths": {
      "@test/*": [
        "test/*"
      ],
    },
  },
}
